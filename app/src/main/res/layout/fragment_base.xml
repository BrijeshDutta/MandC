<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="muffsandchocss.com.fragments.OrderSummaryFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOrderChoclates"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Order Choclates. Rs 12/- per piece"
            android:layout_weight="1.0"
            android:background="#fafcbb"
            />

        <Button
            android:id="@+id/btnOrderMuffins"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Order Muffins Rs 20/- per piece"
            android:layout_weight="1.0"
            android:background="#fafcbb"/>


        <Button
            android:id="@+id/btnSubways"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Order Subway Rs 100/- per piece"
            android:layout_weight="1.0"
            android:background="#fafcbb"/>


        <Button
            android:id="@+id/btnSadwiches"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Order Sanwiches Rs 100/- per piece"
            android:layout_weight="1.0"
            android:background="#fafcbb"/>

        <Button
            android:id="@+id/btnBengaliFood"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Order Bengali food Rs 100/- per piece"
            android:layout_weight="1.0"
            android:background="#fafcbb"/>
    </LinearLayout>


</ScrollView>
